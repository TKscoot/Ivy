ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../../Build/Bin/Ivy/Debug
  TARGET = $(TARGETDIR)/libIvy.a
  OBJDIR = ../../Build/Obj/Ivy/Debug
  PCH = source/ivypch.h
  GCH = $(OBJDIR)/$(notdir $(PCH)).gch
  DEFINES +=
  INCLUDES += -Isource -Idependencies/GLFW/Include -Idependencies/GLAD/include -Idependencies/spdlog/include -Idependencies/glm -Idependencies/stb_image
  FORCE_INCLUDE += -include $(OBJDIR)/$(notdir $(PCH))
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++17
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += dependencies/GLAD/Lib/libGLAD.a -lglfw -lassimp
  LDDEPS += dependencies/GLAD/Lib/libGLAD.a
  ALL_LDFLAGS += $(LDFLAGS) -Ldependencies/GLFW/Lib -Ldependencies/GLAD/Lib -L/usr/lib64 -m64
  LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
  define PREBUILDCMDS
  endef
